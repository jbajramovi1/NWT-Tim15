<div class="container">

  <div class="center-div-register">
    <div class="register-host">
      <div class="register-div-up">
        <img class="login-logo" src="/assets/images/welcome.png">

            <div clas="login-form">
                    <div class="form-group">
                          <input type="name" class="form-control login-form__input" name="name" placeholder="Name"  />
                      </div>

                      <div class="form-group">
                          <input type="email" class="form-control login-form__input" name="email" placeholder="E-mail"/>
                      </div>

                      <div class="form-group">
                          <input type="username" class="form-control login-form__input" name="username" placeholder="Username"/>
                      </div>
                      <div class="form-group">
                          <input type="password" class="form-control login-form__input" name="password" placeholder="Password"/>
                      </div>
                      <div class="form-group">
                          <input type="conf-password" class="form-control login-form__input" name="conf-password" placeholder="Confirm password"/>
                      </div>
             </div>

      </div>
      <button class="btn btn-outline-info login-button" name="register" >REGISTER</button>

    </div>
  </div>

</div>

{{outlet}}
